{% extends "teachernav.jinja2" %}
{% block content %}


<div class="container">
  <h2> Teacher Registration</h2>
  <form action="/teditsuccess" method="POST">
    <div class="form-group">
      <label for="name4">Name:</label>
      <input type="name" class="form-control" id="name4" name="name" value={{name}} >
    </div>
    <div class="form-group">
      <label for="name3">Enter the Institution Name:</label>
      <input type="Institution name" class="form-control" id="name3"  name="insname" value={{ins}}>
    </div>



    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" class="form-control" id="email" name="email" value={{email}}>
      <label> {{ error1 }} </label>
    </div>
    <div class="form-group">
      <label for="pwd">Password:</label>
      <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="pwd" value={{session['pwd']}} >
      <label> {{ error2 }} </label><p>
      </p>


    </div>





    <button type="submit" class="btn btn-default">Submit</button>

  </form>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js">    </script>

<script>
$("#name3").keypress(function () {
      var _val = $("#name3").val();
      var _txt = _val.charAt(0).toUpperCase() + _val.slice(1);
      $("#name3").val(_txt);
  })
  $("#name4").keypress(function () {
        var _val = $("#name4").val();
        var _txt = _val.charAt(0).toUpperCase() + _val.slice(1);
        $("#name4").val(_txt);
    })

  </script>

{% endblock content %}
