{% extends "studentnav.jinja2" %}
{% block content %}

<div class="container">
  <h2> Test</h2>


  <form action="/validate" method="POST">
  {%for i,k in question:%}
    <div class="form-group">

      <label for="name">Question no:</label><p>{{i.question_no }}</p>

    </div>
    <div class="form-group">
      <label for="name">Question:</label><p>{{i.Question_name }}</p>

    </div>
    {%if i.image is not none:%}
    <div class="form-group">
      <label for="name">Image:</label>
      <img id="print" src={{i.image}} />
    </div>
    {%endif%}
    {%if i.qlink is not none:%}
    <div class="form-group">
      <label for="name">Reference link:</label><a href="{{i.qlink}}">{{i.qlink}}</a>
    </div>
    {%endif%}
    
    <div class="form-group">
      <label for="Question">Your answer:</label>
      <input type="text" class="form-control" id="1" placeholder="Enter your answer..." name="ans{{k}}" >

    </div>

    {% endfor %}
    <input type="submit" class="btn btn-primary" value="submit">
</form>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js">    </script>

<script>
$("#1").keypress(function () {
      var _val = $("#1").val();
      var _txt = _val.charAt(0).toUpperCase() + _val.slice(1);
      $("#1").val(_txt);
  })
  </script>
{% endblock content %}
