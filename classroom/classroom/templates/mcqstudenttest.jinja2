{% extends "studentnav.jinja2" %}
{% block content %}


<div class="container">
  <h2> Test</h2>


  <form action="/mcqvalidate" method="POST">
  {%for i,k in question %}
    <div class="form-group">

      <label for="rqno">Question no:{{i.question_no}}<label>

    </div>
    <div class="form-group">
      <label for="rq">Question:{{i.Question_name}}<label>

    </div>

    {%if i.image is not none:%}
    <div class="form-group">
      <label for="name">Image:</label>
      <img id="print" src={{i.image}} />
    </div>
    {%endif%}
    {%if i.qlink is not none:%}
    <div class="form-group">
      <label for="name">Reference link:</label><a href="{{i.qlink}}">{{i.qlink}}</a>
    </div>
    {%endif%}

    <div class="form-group">
      <label for="Answer">Enter the Answer:</label><br>
        <input type="radio"  id="1" name="answer{{k}}" value="{{i.ropt1}}"> <label for="1">{{i.ropt1}}</label><br>
        <input type="radio"  id="2"  name="answer{{k}}" value="{{i.ropt2}}"> <label for="2">{{i.ropt2}}</label><br>
        <input type="radio"  id="3" name="answer{{k}}" value="{{i.ropt2}}"> <label for="3">{{i.ropt3}}</label><br>
        <input type="radio"  id="4"  name="answer{{k}}" value=" {{i.ropt4}}"><label for="4"> {{i.ropt4}}</label><br>
    </div>
    </div>
    <div class="form-group">
    <label for="lq"> Link Question:{{i.linkques_name}}</label><br>

    </div>
    <div class="form-group">
      <label for="Answer">Enter the Answer:</label><br>
        <input type="radio"  id="5"  name="answer1{{k}}" value="{{i.lopt1}}" >   <label for="5">{{i.lopt1}}</label><br>
        <input type="radio"   id="6" name="answer1{{k}}"  value="{{i.lopt2}}"> <label for="6"> {{i.lopt2}}</label><br>
        <input type="radio"   id="7" name="answer1{{k}}"  value="{{i.lopt3}}"> <label for="7"> {{i.lopt3}}</label><br>
        <input type="radio"   id="8" name="answer1{{k}}"  value="{{i.lopt4}}">  <label for="8">{{i.lopt4}}</label><br>
    </div>

    {% endfor %}
    <input type="submit" class="btn btn-primary" value="submit">
</form>

{% endblock content %}
