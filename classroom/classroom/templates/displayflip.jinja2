{% extends "teachernav.jinja2" %}
{% block content %}
<div>
<div class="container">
  <h2> Student Details</h2>
</div>





  <table style="width:100%">
    <tr>
      <th>Student ID</th>
      <th>Student name</th>
      <th>Flip</th>
      <th>Remove</th>
    </tr>
  {%for i in range(0,count):%}
    <tr>

      <td> {{query[0][i]}}</td>
      <td>{{query[1][i]}}</td>
      {%if query[2][i]==1 %}
      <td><form action="/store" method="POST">
        <input type="hidden" name ="student_id" value={{query[0][i]}}>
        <input type="submit" disabled value="flip" ></form>
      </td>
      <td><form action="/flipremove" method="POST">
        <input type="hidden" name ="student_id" value={{query[0][i]}}>

        <input type="submit" value="remove"></form>
      </td>
      {%else%}
      <td><form action="/store" method="POST">
        <input type="hidden" name ="student_id" value={{query[0][i]}}>
        <input type="submit"  value="flip" ></form>
      </td>
      <td><form action="/flipremove" method="POST">
        <input type="hidden" name ="student_id" value={{query[0][i]}}>

        <input type="submit" disabled value="remove"></form>
      </td>
      {%endif%}


    </tr>

  {% endfor %}

  </table>
</div>

{% endblock content %}
