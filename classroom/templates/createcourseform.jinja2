{% extends "teachernav.jinja2" %}
{% block content %}


<div class="container">
  <h2> Create Course</h2>
  <form action="/c1"   method="POST">
  <div class="form-group">
    <label for="course_id">Enter the Course id:</label>
    <input type="text" class="form-control" id="courseid" placeholder="Enter the Course id" name="courseid" >
  </div>
    <div class="form-group">
      <label for="cname">Course Name:</label>
      <input type="text" class="form-control" id="coursename" placeholder="Enter course name" name="coursename">
    </div>


    <div class="form-group">
      <label for="Domain name">Enter the Domain Name:</label>
      <input type="text" class="form-control" id="domname" placeholder="Enter the domain name" name="domname" >
      <label> {{error}}</label>
    </div>

    <input type="submit" class="btn btn-default" name="formone">
  </form>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js">    </script>

<script>
$("#coursename").keypress(function () {
      var _val = $("#coursename").val();
      var _txt = _val.charAt(0).toUpperCase() + _val.slice(1);
      $("#coursename").val(_txt);
  })

   $("#domname").keypress(function () {
      var _val = $("#domname").val();
      var _txt = _val.charAt(0).toUpperCase() + _val.slice(1);
      $("#domname").val(_txt);
  })
  </script>
{% endblock content %}
