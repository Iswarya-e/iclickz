{% extends "teachernav.jinja2" %}
{% block content %}


<div class="container">
  <h2> Create Questions</h2>
  <form action="/quizstore" method="POST">
  <div class="form-group">
    <label for="name">Enter the question number:</label>
    <input type="number" class="form-control" id="name" placeholder="Type the Question number...." name="qno" required>
  </div>
  <div class="form-group">
    <label for="name">Enter the mark:</label>
    <input type="text" class="form-control" id="name"  name="qmark" required>
  </div>
  <div class="form-group">
    <label for="name">Enter the time (in seconds):</label>

    <input type="number" id="appt" name="appt" min='13:00' max='16:00' required>
  </div>
  <div class="form-group">
      <label for="name">Enter the extension time (in seconds):</label>
      <input type="number" id="1" class="form-control" min='13:00' max='16:00' name="exttime" required>
    </div>
    <div class="form-group">
      <label for="name">Enter the question:</label>
      <input type="text" class="form-control" id="name"name="qname" required>
    </div>



    <div class="form-group">
      <label for="Answer">Enter the Answer:</label><br>
        <input type="radio"  id="1" > <input type="text" class="form-control" id="name1" name="A" required><br>
        <input type="radio"  id="2"  > <input type="text" class="form-control" id="name2"  name="B" required><br>
        <input type="radio"   id="3" > <input type="text" class="form-control" id="name3" name="C" required><br>
        <input type="radio"   id="4" > <input type="text" class="form-control" id="name4" name="D" required><br>
    </div>
<input type="hidden" name="answer" id="answer">
    <div class="form-group">
      <label for="name">Enter the hint:</label>
      <input type="text" class="form-control" id="name" name="hint" required>
    </div>




      <input type="submit" class="btn btn-default" onclick="saveans()"></button>
      </form>
      </div>
      <script>
      function saveans()
      {
      if(document.getElementById("1").checked)
{
document.getElementById("answer").value = document.getElementById("name1").value;
}
else if (document.getElementById("2").checked)
{
document.getElementById("answer").value = document.getElementById("name2").value;

}
else if(document.getElementById("3").checked)
{
document.getElementById("answer").value = document.getElementById("name3").value;

}
else if(document.getElementById("4").checked)
{
document.getElementById("answer").value = document.getElementById("name4").value;

}
      }
      $(document).ready(function()
      {
      $('#time').click(function()
      {
      $('#time').timepicker();
      timeFormat:"mm:ss"
      });

      });
</script>
{% endblock content %}
