{% extends "studentnav.jinja2" %}
{% block content %}


<div class="container">
  <h2> Student Registration</h2>
  <form action="/seditsuccess" method="POST">
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="name" class="form-control" id="name3" name="name" value={{name}} >
    </div>
    <div class="form-group">
      <label for="Institution name">Enter the Institution Name:</label>
      <input type="Institution name" class="form-control" id="name4"  name="insname" value={{ins}}>
    </div>



    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" class="form-control" id="email" name="email" value={{email}}>
      <label> {{ error1 }} </label>
    </div>
    <div class="form-group">
      <label for="pwd">Password:</label>
      <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="pwd" value={{session['pwd']}} >
      <label> {{ error2 }} </label><p>
      </p>


    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js">    </script>

    <script>
    $("#name3").keypress(function () {
          var _val = $("#name3").val();
          var _txt = _val.charAt(0).toUpperCase() + _val.slice(1);
          $("#name3").val(_txt);
      })
      $("#name4").keypress(function () {
            var _val = $("#name4").val();
            var _txt = _val.charAt(0).toUpperCase() + _val.slice(1);
            $("#name4").val(_txt);
        })

      </script>




    <button type="submit" class="btn btn-default">Submit</button>

  </form>
</div>

{% endblock content %}
