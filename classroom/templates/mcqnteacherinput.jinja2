{% extends "teachernav.jinja2" %}
{% block content %}

<style>
  article, aside, figure, footer, header, hgroup,
  menu, nav, section { display: block; }
</style>
<div class="container">
  <h2> Create Questions</h2>
  <form action="/mcqn2" method="POST" enctype="multipart/form-data">
  <div class="form-group">
    <label for="name">Enter the question number:</label>
    <input type="id" class="form-control" id="name" placeholder="Type the Question number...." name="qno" required>
  </div>
  <div class="form-group">
    <label for="name">Enter the mark:</label>
    <input type="text" class="form-control" id="name" placeholder="Enter the mark...." name="qmark" required>
  </div>
    <div class="form-group">
      <label for="name">Enter the question:</label>
      <input type="text" class="form-control" id="name1" placeholder="Type the Question...." name="qname" required>
    </div>
    <div >
      <label for="name">Enter the Image if any:</label>
      <input type='file' accept="image/*" onchange="readURL(this);" />
      <img id="blah"  hidden src="#"  />
      <input type="text"  hidden name="img" id="img">

    </div>
      <div class="form-group">
      <label for="name">Enter the reference link if any:</label>
        <input type="text" name='qlink'>
        </div>

    <div class="form-group">
      <label for="Answer">Enter the Answer:</label><br>
        <input type="radio"   name="answer" id="1" value="opt1"><label for="1" ></label> <input type="text" class="form-control" id="name" name="option1" required>
        <input type="radio"   name="answer" id="2"  value="opt2"><label for="2" ></label> <input type="text" class="form-control" id="name" name="option2" required>
        <input type="radio"   name="answer" id="3" value="opt3"> <label for="3" ></label><input type="text" class="form-control" id="name"  name="option3" required>
        <input type="radio"   name="answer" id="4" value="opt4"> <label for="4" ></label><input type="text" class="form-control" id="name"  name="option4" required>
    </div>

        <input type="submit" class="btn btn-default"></button>
        </form>
        </div>


              <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js">    </script>

              <script>
              $("#name1").keypress(function () {
                    var _val = $("#name1").val();
                    var _txt = _val.charAt(0).toUpperCase() + _val.slice(1);
                    $("#name1").val(_txt);
                })

                </script>
                <script>
                function readURL(input) {
                        if (input.files && input.files[0]) {
                            var reader = new FileReader();

                            reader.onload = function (e) {
                                $('#blah')
                                    .attr('src', e.target.result)
                                    .width(150)
                                    .height(200);
              
                $('#img').attr('value',e.target.result)
                            };

                            reader.readAsDataURL(input.files[0]);
                        }
                    }
                </script>

{% endblock content %}
